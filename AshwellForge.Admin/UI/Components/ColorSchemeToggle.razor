<MudToggleIconButton Toggled="IsToDarkMode"
                     ToggledChanged="OnToggledChanged"
                     Icon="@Icons.Material.Filled.LightMode"
                     ToggledIcon="@Icons.Material.Filled.DarkMode"
                     Variant="Variant.Outlined"
                     title="@(IsToDarkMode ? "Dark" : "Light")"
                     Color="Color.Primary" />

@code {
    [Parameter]
    public EventCallback<bool> OnSetDarkMode { get; set; }

    bool IsToDarkMode { get; set; }

    void OnToggledChanged(bool toggled)
    {
        IsToDarkMode = toggled;
        OnSetDarkMode.InvokeAsync(!toggled);
    }
}
