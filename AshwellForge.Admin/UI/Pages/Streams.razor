@page "/streams"
@inject NavigationManager NavigationManager

<PageContainer Title="Streams">
    <PageContent>
        <StreamDataGrid OnOpenPreview=@OpenPreview />
    </PageContent>
</PageContainer>

@code {
    void OpenPreview(int streamId)
    {
        Console.WriteLine($"Previewing - {streamId}");
        NavigationManager.NavigateTo("/streams/" + streamId);
    }
}
